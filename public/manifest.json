{
    "manifest_version": 3,
    "name": "My React Extension",
    "version": "0.1.0",
    "description": "A simple Chrome extension built with React.",
    "icons": {
        "16": "logo192.png",
        "48": "logo192.png",
        "128": "logo192.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "logo192.png",
            "48": "logo192.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "*://*/*"
    ]
}